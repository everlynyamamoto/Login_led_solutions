<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00F4F0F0"
    android:hapticFeedbackEnabled="false"
    tools:context=".Investments">

    <Button
        android:id="@+id/buttonBack3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonBack"
        app:backgroundTint="#808080"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/coin1"
        android:layout_width="216dp"
        android:layout_height="28dp"
        android:background="#FFFFFF"
        android:hapticFeedbackEnabled="false"
        android:text="Coin1"
        android:textIsSelectable="true"
        app:drawableLeftCompat="@drawable/ic_baseline_monetization_on_24"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/coin2"
        android:layout_width="216dp"
        android:layout_height="28dp"
        android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
        android:text="Coin2"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="312dp" />

    <TextView
        android:id="@+id/coin3"
        android:layout_width="216dp"
        android:layout_height="28dp"
        android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
        android:text="Coin3"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="383dp" />

    <TextView
        android:id="@+id/coin4"
        android:layout_width="216dp"
        android:layout_height="28dp"
        android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
        android:text="Coin4"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="462dp" />

    <TextView
        android:id="@+id/investments_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/investments_wallet"
        android:textColor="#6FA0DF"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>